<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <include layout="@layout/ly_title_bar" />

        <com.xinyu.mwp.view.WPEditText
            android:id="@+id/phoneEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_40"
            app:edit_hint="请输入您的手机号码"
            app:edit_show_eye="false"
            app:edit_show_icon="false"
            app:edit_show_right_text="false" />

        <com.xinyu.mwp.view.WPEditText
            android:id="@+id/msgEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_19"
            app:edit_hint="请输入验证码"
            app:edit_show_eye="false"
            app:edit_show_icon="false"
            app:edit_show_right_text="true" />

        <com.xinyu.mwp.view.WPEditText
            android:id="@+id/soundEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_19"
            android:visibility="gone"
            app:edit_hint="请输入语音验证码"
            app:edit_right_text="获取语音验证码"
            app:edit_show_eye="false"
            app:edit_show_icon="false"
            app:edit_show_right_text="true" />

        <com.xinyu.mwp.view.WPEditText
            android:id="@+id/pwdEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_19"
            app:edit_hint="请设置您的登录密码"
            app:edit_pwd="true"
            app:edit_show_eye="true"
            app:edit_show_icon="false"
            app:edit_show_right_text="false" />

        <com.xinyu.mwp.view.WPEditText
            android:id="@+id/wpe_member_unit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_19"
            app:edit_hint="@string/member_unit"
            app:edit_show_eye="false"
            app:edit_show_icon="false"
            app:edit_show_right_text="false" />

        <com.xinyu.mwp.view.WPEditText
            android:id="@+id/wpe_agent_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_19"
            app:edit_hint="@string/agent_id"
            app:edit_show_eye="false"
            app:edit_show_icon="false"
            app:edit_show_right_text="false" />

        <com.xinyu.mwp.view.WPEditText
            android:id="@+id/wpe_referee_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_19"
            app:edit_hint="@string/referee_id"
            app:edit_show_eye="false"
            app:edit_show_icon="false"
            app:edit_show_right_text="false" />


        <Button
            android:id="@+id/nextButton"
            style="@style/ButtonStyle"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="@dimen/dp_30"
            android:text="注册" />

        <include layout="@layout/ly_register_footer" />

    </LinearLayout>


</ScrollView>