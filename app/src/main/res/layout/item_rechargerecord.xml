<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sel_comm_action_1"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_14">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp_16"
        android:paddingRight="@dimen/dp_14"
        android:paddingTop="@dimen/dp_16">

        <LinearLayout
            android:id="@+id/dateLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/date_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/font_999"
                android:textSize="@dimen/fontSize_14sp" />

            <TextView
                android:id="@+id/date_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_3"
                android:layout_gravity="center"
                android:textColor="@color/font_999"
                android:textSize="@dimen/fontSize_11sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/timeLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11:11:11"
                android:textColor="@color/font_999"
                android:textSize="@dimen/fontSize_11sp"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_3"
                android:text="充值成功"
                android:textColor="@color/font_666"
                android:textSize="@dimen/fontSize_12sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_toLeftOf="@id/timeLayout"
            android:layout_toRightOf="@id/dateLayout">

            <ImageView
                android:id="@+id/icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_24"
                android:layout_toRightOf="@id/icon"
                android:text="+1000000.00"
                android:textColor="@color/font_333"
                android:textSize="@dimen/fontSize_18sp" />

            <TextView
                android:id="@+id/info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/money"
                android:layout_marginLeft="@dimen/dp_24"
                android:layout_toRightOf="@id/icon"
                android:text="招商银行 尾号8989"
                android:textColor="@color/font_666"
                android:textSize="@dimen/fontSize_12sp" />

        </RelativeLayout>
    </RelativeLayout>

    <include layout="@layout/ly_line" />
</LinearLayout>