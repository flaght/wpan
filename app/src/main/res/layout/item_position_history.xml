<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_history_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/dp_15"
    android:paddingTop="@dimen/dp_15">

    <TextView
        android:id="@+id/tv_product_history_name"
        style="@style/style_trade_product_name"
        android:layout_marginLeft="@dimen/dp_15"
        android:text="上海-法兰xxxxxxxxxxx分时" />

    <TextView
        android:id="@+id/tv_history_loss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tv_product_history_name"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_toRightOf="@id/tv_product_history_name"
        android:background="@color/default_green"
        android:padding="@dimen/dp_2"
        android:text="亏"
        android:textColor="@color/white"
        android:textSize="@dimen/fontSize_12sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv_history_profit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tv_product_history_name"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_toRightOf="@id/tv_product_history_name"
        android:background="@color/default_red"
        android:padding="@dimen/dp_2"
        android:text="盈"
        android:textColor="@color/white"
        android:textSize="@dimen/fontSize_12sp"
        android:visibility="invisible" />


    <TextView
        android:id="@+id/tv_action_none"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tv_history_loss"
        android:layout_marginLeft="@dimen/dp_9"
        android:layout_toRightOf="@id/tv_history_loss"
        android:background="@color/color_c2cfd7"
        android:padding="@dimen/dp_2"
        android:text="未操作"
        android:textColor="@color/white"
        android:textSize="@dimen/fontSize_12sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv_action_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tv_history_loss"
        android:layout_marginLeft="@dimen/dp_9"
        android:layout_toRightOf="@id/tv_history_loss"
        android:background="@color/default_main_color"
        android:padding="@dimen/dp_2"
        android:textColor="@color/white"
        android:textSize="@dimen/fontSize_12sp"
        android:visibility="invisible" />

    <LinearLayout
        android:id="@+id/ll_product_item2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_product_history_name"
        android:layout_marginTop="@dimen/dp_14"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15">

        <TextView
            android:id="@+id/tv_desc_turnover"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:textColor="@color/font_999"
            android:textSize="@dimen/fontSize_14sp" />

        <TextView
            android:id="@+id/tv_trade_history_turnover"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:textColor="@color/default_main_color"
            android:textSize="@dimen/fontSize_14sp" />

        <TextView
            android:id="@+id/tv_history_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:paddingLeft="@dimen/dp_30"
            android:text="xxxx.xx.xx xx:"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/fontSize_11sp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_product_item3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_product_item2"
        android:layout_marginTop="@dimen/dp_12"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15">

        <TextView
            android:id="@+id/tv_desc_open_position"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="建仓价格"
            android:textColor="@color/font_999"
            android:textSize="@dimen/fontSize_14sp" />

        <TextView
            android:id="@+id/tv_open_position"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:textColor="@color/color_666666"
            android:textSize="@dimen/fontSize_14sp" />

        <TextView
            android:id="@+id/tv_null"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:paddingLeft="@dimen/dp_30"

            android:textColor="@color/color_666666"
            android:textSize="@dimen/fontSize_11sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_product_item3"
        android:layout_marginTop="@dimen/dp_12"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15">

        <TextView
            android:id="@+id/tv_desc_clode_position"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="平仓价格"
            android:textColor="@color/font_999"
            android:textSize="@dimen/fontSize_14sp" />

        <TextView
            android:id="@+id/tv_close_position"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/fontSize_14sp" />

        <TextView
            android:id="@+id/tv_null2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:paddingLeft="@dimen/dp_30"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/fontSize_11sp" />
    </LinearLayout>


</RelativeLayout>